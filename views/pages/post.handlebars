{{> header}}

<div>
    <h2>{{post.title}}</h2>
    <p>{{post.content}}</p>
    <p>Created by {{post.user.username}} on {{post.created_at}}</p>
</div>

<div>
    <h3>Comments:</h3>
    {{#each comments}}
        <div>
            <p>{{content}}</p>
            <p>Created by {{user.username}} on {{created_at}}</p>
        </div>
    {{/each}}
</div>

<form action="/api/comments" method="post">
    <input type="hidden" name="post_id" value="{{post
.id}}">
<label for="comment">Leave a comment:</label>
<textarea id="comment" name="content" required></textarea>
<button type="submit">Submit</button>

</form>